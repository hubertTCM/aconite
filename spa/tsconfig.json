{
	"compilerOptions": {
		"strict": true,
		"target": "es6",
		"module": "commonjs",
		"outDir": "dist",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"lib": [
			"dom",
			"esnext"
		],
		"jsx": "react",
		// Helpful when true for debugging sometimes:
		"noErrorTruncation": false,
		"baseUrl": ".",
		"paths": {
			"*": [
				"node_modules/*"
			],
			"@src/*": [
				"./src/*"
			],
		}
	},
}